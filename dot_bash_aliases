alias ls='\
	\ls \
	--color=auto \
	--classify=auto \
	--hyperlink=auto \
	--group-directories-first \
'

alias la='\
	\ls \
	--almost-all \
	--color=auto \
	--classify=auto \
	--hyperlink=auto \
	--group-directories-first \
'

alias ll='\
	\ls \
	-l \
	--all \
	--human-readable \
	--kibibytes \
	--color=auto \
	--classify=auto \
	--hyperlink=auto \
	--time-style=long-iso \
	--group-directories-first \
'

alias eza='\
	\eza \
	--color=auto \
	--icons=never \
	--classify \
	--hyperlink \
	--group-directories-first \
'

alias ls='eza'

alias la='\
	\eza \
	--all \
	--color=auto \
	--icons=never \
	--classify \
	--hyperlink \
	--group-directories-first \
'

alias ll='\
	\eza \
	--long \
	--header \
	--binary \
	--all --all \
	--color=auto \
	--color-scale \
	--icons=never \
	--time-style long-iso \
	--time modified \
	--git \
	--git-repos \
	--hyperlink \
	--octal-permissions \
	--classify \
	--smart-group \
	--group-directories-first \
'

