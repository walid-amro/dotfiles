alias date='\date +"\
Now:%t%t%l:%M:%S %p -- %A (%U/53), %e %B, %+4Y%n\
ISO 8601:%t%FT%T%z%t%n\
Unix Epoch:%t%s\
"'
alias now='date'

# Safety Nets
alias rm='\rm --interactive=always --preserve-root'
alias mv='\mv --interactive'
alias cp='\cp --interactive'
alias ln='\ln --interactive'
alias wget='\wget --continue'

mkcdir() {
	mkdir -p $1
	cd $1
}
alias mkdircd="mkcdir"

# alias count-pdf-pages='pdfinfo {} | grep -oP '\''(?<=Pages:          )[ A-Za-z0-9]*'\'''

count-pdf-pages () {
	pdfinfo "$1" | \grep -oP '(?<=Pages:          )[ A-Za-z0-9]*'
}

